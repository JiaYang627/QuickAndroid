<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layoutSize40"
    android:layout_marginTop="@dimen/layoutSize55"
    android:layout_marginRight="@dimen/layoutSize40"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_market_place_title_text"
        style="@style/TextRegularStyle"
        android:text="Expiring Requests:"
        android:textColor="@color/grey_4a"
        android:textSize="@dimen/textSize55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_market_place_right_img"
        android:layout_width="@dimen/layoutSize18"
        android:layout_height="@dimen/layoutSize34"
        android:src="@drawable/icon_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_market_place_right_all_text"
        style="@style/TextRegularStyle"
        android:layout_marginRight="@dimen/layoutSize26"
        android:text="see all"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/textSize42"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_market_place_right_img"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>